{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/contentScript/App.jsx"
  ],
  "exclude": ["node_modules"]
}
